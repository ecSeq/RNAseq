// base.config
// use this config file to modify process resource allocation

// PROCESS RESOURCES
process {

	// top-level configuration labels for groups of processes
	withLabel: "low" {
    	time = { 2.h * task.attempt }
    	memory = { 2.GB * task.attempt }
    	cpus = { 2 * task.attempt }
	}

	withLabel: "high" {
    	time = { 16.h * task.attempt }
    	memory = { 24.GB * task.attempt }
    	cpus = { 8 * task.attempt }
	}

	// label processes which should kill the pipeline if they fail
	withLabel: "finish" {
    	errorStrategy = { task.exitStatus in [140,143,137,104,134,139] ? 'retry' : 'finish' }
	}

	// label processes which can be safely ignored if they fail
	withLabel: "ignore" {
    	errorStrategy = { task.exitStatus in [140,143,137,104,134,139] ? 'retry' : 'ignore' }
	}

	
	// configuration for indexing
	withName: "STAR_index" {

		// label 'low'
		// label 'finish'
    	memory = { 4.GB * task.attempt }
    	cpus = { 4 * task.attempt }
		maxRetries = 1
	}

	// configuration for mapping
	withName: "STAR" {
	
		// label 'low'
		// label 'finish'
    	maxRetries = 2
	}

	// configuration for bamQC
	withName: "bamQC" {
	
		// label 'low'
		// label 'ignore'
		maxRetries = 1
	}

	// configuration for featureCounts
	withName: "featureCounts" {
	
		// label 'low'
		// label 'finish'
		maxRetries = 1
	}

	// configuration for DESeq2
	withName: "DESeq2" {
	
		// label 'low'
		// label 'finish'
		maxRetries = 1
	}

}