// PRIMARY NEXTFLOW.CONFIG
// This file contains all default parameters, profiles, pipeline metadata

// DEFAULT PARAMETERS
params {

	// BASIC PARAMS
	help = false
	version = false
	debug = false
	take = "10"
	fork = "2"

	// INPUT / OUTPUT
	input = "$PWD"
	reference = false
	features = false
	samples = false
	output = "$PWD"
	SE = false

	// MODIFIERS
	control = false
	bamQC = false

}


// NEXTFLOW PROFILES
profiles {

	// -profile standard
	standard {
		includeConfig "${baseDir}/config/base.config"
		conda.enabled = true
		process.conda = "$HOME/miniconda3/envs/RNAseq"
	}

	// -profile conda
	conda {
		includeConfig "${baseDir}/config/base.config"
		conda.enabled = true
		process.conda = "$baseDir/env/environment.yml"
	}

	// -profile docker
	docker {
		includeConfig "${baseDir}/config/base.config"
		docker.enabled = true
		process.container = 'ecseq/rnaseq'
	}

	// -profile singularity
	singularity {
		includeConfig "${baseDir}/config/base.config"
		singularity.enabled = true
		process.container = 'ecseq/rnaseq'
	}

	// -profile test
	test {
		includeConfig "${baseDir}/config/base.config"
		includeConfig "${baseDir}/config/test.config"
	}

	// -profile custom
	custom {
		// Don't load any config (for use with custom home configs)
	}
}


// NEXTFLOW MANIFEST
manifest {
	homePage = "https://github.com/ecseq/rnaseq"
	author = "Adam Nunn"
	description = "A short example pipeline for RNAseq Alignment in Nextflow"
	mainScript = "main.nf"
	version = "0.2.0"
	nextflowVersion = "23.10.0"
}


// NEXTFLOW REPORTING # this defines pipeline metadata
dag {
	enabled = true
	overwrite = true
	file = "${params.output}/dag.svg"
}
report {
	enabled = true
	overwrite = true
	file = "${params.output}/report.html"
}
timeline {
	enabled = true
	overwrite = true
	file = "${params.output}/timeline.html"
}
trace {
	enabled = true
	overwrite = true
	file = "${params.output}/trace.txt"
}